@page
@model AI4ALL.Pages.About.IndexModel
@using AI4ALL.Services
@{
    var lang = Model.CurrentLanguage;
    Layout = "_Layout";
}

<section class="about-hero-section fade-in">
    <div class="about-hero-content">
        <h1 class="orbitron">@LocalizationService.GetText("AboutTitle", lang)</h1>
        <h2 class="about-hero-subtitle">@LocalizationService.GetText("AboutHero", lang)</h2>
        <p class="lead">@LocalizationService.GetText("AboutDescription", lang)</p>
    </div>
    <img src="~/img/ai-hero.png" alt="AI4ALL Hero" class="about-hero-img floating" />
</section>

<section class="about-stats-section fade-in delay-1">
    <div class="about-stats-card">
        <img src="~/img/about-stats.png" alt="AI4ALL Stats" />
        <p>@LocalizationService.GetText("AboutStats", lang)</p>
    </div>
    <div class="about-stats-card">
        <img src="~/img/about-community.png" alt="AI4ALL Community" />
        <p>@LocalizationService.GetText("AboutCommunity", lang)</p>
    </div>
    <div class="about-stats-card">
        <img src="~/img/about-mentorship.png" alt="AI4ALL Mentorship" />
        <p>@LocalizationService.GetText("AboutMentorship", lang)</p>
    </div>
</section>

<section class="about-gallery-section fade-in delay-2">
    <h2>@LocalizationService.GetText("AboutGalleryTitle", lang)</h2>
    <div class="about-gallery">
        <img src="~/img/gallery1.jpg" alt="Workshop" />
        <img src="~/img/gallery2.jpg" alt="Hackathon" />
        <img src="~/img/gallery3.jpg" alt="Mentorship" />
        <img src="~/img/gallery4.jpg" alt="Community" />
    </div>
</section>

<section class="about-timeline-section fade-in delay-3">
    <h2>@LocalizationService.GetText("AboutTimelineTitle", lang)</h2>
    <div class="about-timeline">
        <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
                <h4>2019</h4>
                <p>@LocalizationService.GetText("About2019", lang)</p>
            </div>
        </div>
        <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
                <h4>2021</h4>
                <p>@LocalizationService.GetText("About2021", lang)</p>
            </div>
        </div>
        <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
                <h4>2023</h4>
                <p>@LocalizationService.GetText("About2023", lang)</p>
            </div>
        </div>
        <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
                <h4>2025+</h4>
                <p>@LocalizationService.GetText("AboutFuture", lang)</p>
            </div>
        </div>
    </div>
</section>